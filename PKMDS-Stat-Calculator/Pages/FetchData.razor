@page "/"
@inject HttpClient Http
@inject PokeApiClient PokeApiClient
@using PokeApiNet
@using PKMDS_Stat_Calculator.Models

<h1>Pokemon API Test</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (errorMessage != null)
{
    <label>@errorMessage</label>
}
else if (!(pokemonNames?.Any() ?? false))
{
    <p><em>Loading...</em></p>
}
else
{
    <select @bind="selectedPokemon">
        <option value=@string.Empty>(Select)</option>
        @foreach (string pokemonName in pokemonNames)
        {
            <option value="@pokemonName">@pokemonName</option>
        }
    </select>

    <button @onclick="@(async e => await ButtonClicked())">Get Stats</button>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>HP</th>
                <th>Attack</th>
                <th>Defense</th>
                <th>Special Attack</th>
                <th>Special Defense</th>
                <th>Speed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PokemonCalculated pokemonCalculated in pokemonList)
            {
                <tr>
                    <td><img class="pokemon-sprite" src="@pokemonCalculated.Pokemon.Sprites.FrontDefault" /></td>
                    <td>@pokemonCalculated.Pokemon.Id.ToString()</td>
                    <td>@pokemonCalculated.Pokemon.Name</td>
                    <td>@GetPokemonTypes(pokemonCalculated.Pokemon)</td>
                    <td>@pokemonCalculated.Pokemon.Stats[0].BaseStat</td>
                    <td>@pokemonCalculated.Pokemon.Stats[1].BaseStat</td>
                    <td>@pokemonCalculated.Pokemon.Stats[2].BaseStat</td>
                    <td>@pokemonCalculated.Pokemon.Stats[3].BaseStat</td>
                    <td>@pokemonCalculated.Pokemon.Stats[4].BaseStat</td>
                    <td>@pokemonCalculated.Pokemon.Stats[5].BaseStat</td>
                </tr>
            }
        </tbody>
    </table>
}
