<h1>Pokemon API Test</h1>

@if (errorMessage is not null)
{
    <label>@errorMessage</label>
}
else if (!pokemonNames.Any())
{
    <p><em>Loading...</em></p>
}
else
{
    <select @bind="selectedPokemon">
        <option value=@string.Empty>(Select)</option>
        @foreach (var pokemonName in pokemonNames)
        {
            <option value="@pokemonName">@pokemonName</option>
        }
    </select>
    <button @onclick="@(async _ => await ButtonClicked())">Get Stats</button>
    <label>Showing stats for @(pokemonList.Count) Pokemon.</label>
    <PokemonComponent PokemonList="@pokemonList"></PokemonComponent>
}
