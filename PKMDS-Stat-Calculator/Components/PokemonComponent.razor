<MudPaper Class="mb-2">
    <MudCheckBox Label="Show Sprite"
                 @bind-Checked="showSprite" />
</MudPaper>

@if (PokemonList is not null)
{
    <MudTable Items="@PokemonList">
        <HeaderContent>
            @if (showSprite)
            {
                <MudTh></MudTh>
            }
            <MudTh>Id</MudTh>
            <MudTh>Name</MudTh>
            <MudTh>Type</MudTh>
            <MudTh>HP</MudTh>
            <MudTh>Attack</MudTh>
            <MudTh>Defense</MudTh>
            <MudTh>Special Attack</MudTh>
            <MudTh>Special Defense</MudTh>
            <MudTh>Speed</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            @if (showSprite)
            {
                <MudTd>
                    <MudImage Src="@context.Pokemon.Sprites.FrontDefault"
                              Alt="@context.Pokemon.Name" />
                </MudTd>
            }
            <MudTd DataLabel="Id">@context.Pokemon.Id</MudTd>
            <MudTd DataLabel="Name">@context.Pokemon.Name</MudTd>
            <MudTd DataLabel="Type">@GetPokemonTypes(context.Pokemon)</MudTd>
            <MudTd DataLabel="HP">@context.Pokemon.Stats[0].BaseStat</MudTd>
            <MudTd DataLabel="Attack">@context.Pokemon.Stats[1].BaseStat</MudTd>
            <MudTd DataLabel="Defense">@context.Pokemon.Stats[2].BaseStat</MudTd>
            <MudTd DataLabel="Special Attack">@context.Pokemon.Stats[3].BaseStat</MudTd>
            <MudTd DataLabel="Special Defense">@context.Pokemon.Stats[4].BaseStat</MudTd>
            <MudTd DataLabel="Speed">@context.Pokemon.Stats[5].BaseStat</MudTd>
            <MudTd>
                <MudButton Color="Color.Error"
                           Variant="Variant.Outlined"
                           Size="Size.Small"
                           OnClick="@(_ => RemoveRow(context))">
                    X
                </MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>
}
